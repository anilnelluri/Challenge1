<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/statictext4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:padding="5dp"
        android:text="Selected Items"
        android:textSize="15sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/selecteditemlist"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignLeft="@+id/statictext4"
        android:layout_below="@+id/statictext4"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp" >
    </ListView>

    <TextView
        android:id="@+id/payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/selecteditemlist"
        android:layout_below="@+id/selecteditemlist"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/checkout"
        android:text="Finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/selecteditemlist"
        android:layout_below="@+id/payment"
        android:layout_marginTop="10dp" />
    
</RelativeLayout>