<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <TextView 
        android:id="@+id/statictext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginLeft="10dp"
        android:text="Select a category"/>
    
    <Button 
        android:id="@+id/cat1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/statictext"
        android:layout_alignLeft="@+id/statictext"
        android:layout_marginRight="10dp"
        android:text="Dairy"
        android:padding="5dp"/>
    
    <Button 
        android:id="@+id/cat2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/cat1"
        android:layout_alignLeft="@+id/statictext"
        android:text="Fruits"
        android:padding="5dp"/>
    
    <Button 
        android:id="@+id/cat3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/cat2"
        android:layout_alignLeft="@+id/statictext"
        android:text="Frozen"
        android:padding="5dp"/>
    
    <Button 
        android:id="@+id/cat4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/cat3"
        android:layout_alignLeft="@+id/statictext"
        android:text="Meat"
        android:padding="5dp"/>
   
    <Button 
        android:id="@+id/cat5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/cat4"
        android:layout_alignLeft="@+id/statictext"
        android:text="Beverage"
        android:padding="5dp"/>

</RelativeLayout>
